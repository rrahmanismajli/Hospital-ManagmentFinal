@model IEnumerable<Hospital_Managment.Models.Appointments>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Manage all your Appointments</h1>

<p>
    <a asp-action="Appointment">Make a New Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeOfAppointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fullAdress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReasonOfVisiting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>


                @{
                    var days = (item.DateTimeOfAppointment.Day - DateTime.Now.Day);
                        <td>You have these Days Reamaing:<span class="text-danger">@days</span></td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fullAdress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReasonOfVisiting)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FirstName)
                    @Html.DisplayFor(modelItem => item.Doctor.LastName)
                </td>
                @*  <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<canvas id="lineChart" width="400" height="400"></canvas>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
  <script src="~/js/chartPie.js"></script>
}
