
@{
    
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

@{
    var status = Context.Request.Query["status"];
    var pending = "text-primary";
    var inprocess = "text-primary";
    var completed = "text-primary";
    var approved = "text-primary";
    var all = "text-primary";

    switch(status){
        case "pending":
            pending = "active text-danger";
            break;
        case "inprocess":
            inprocess = "active text-danger";
            break;
        case "completed":
            completed = "active text-danger";
            break;
        case "approved":
            approved = "active text-danger";
            break;
        default :
     all = "active text-wthie";
            break;
    }
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="p-2">
          <ul class="list-group list-group-horizontal-sm">
              <a style="text-decoration:none;" asp-controller="Orders" asp-action="Index" asp-route-status="inprocess">
                  <li class="list-group-item @inprocess">In Process</li>
              </a>
              <a style="text-decoration:none;" asp-controller="Orders" asp-action="Index" asp-route-status="pending">
                  <li class="list-group-item @pending">Pending</li>
              </a>
              <a style="text-decoration:none;" asp-controller="Orders" asp-action="Index" asp-route-status="completed">
                  <li class="list-group-item @completed">Completed</li>
              </a>
                <a style="text-decoration:none;" asp-controller="Orders" asp-action="Index" asp-route-status="approved">
                <li class="list-group-item @approved">Approved</li>
              </a>
              <a style="text-decoration:none;" asp-controller="Orders" asp-action="Index" asp-route-status="all">
                  <li class="list-group-item @all">All</li>
              </a>

          </ul>

        </div>
    </div>
    <br /><br />

    <table id="tblData" class=" table-bordered table-white" style="width:100%">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email </th>
                <th>Status </th>
                <th> Total $</th>
                <th></th>
       


            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/ordersCostumer.js"></script>
}

