@model ShoppingCart

@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}
<form  asp-action="Details">
    <input hidden asp-for="ProductId" />
<h1>Details</h1>
<div class="container">
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
        </div>
        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">
                <img width="250px" height="250px" src="@Model.Product.ImagePath" class="border p-3">
               @* <span class="sub-img">
                    <img src="http://nicesnippets.com/demo/pd-image2.jpg" class="border p-2">
                    <img src="http://nicesnippets.com/demo/pd-image3.jpg" class="border p-2">
                    <img src="http://nicesnippets.com/demo/pd-image4.jpg" class="border p-2">
                </span>*@
            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <span>Product Name</span>
                            <p class="m-0 p-0">@Model.Product.productName</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro">$@Model.Product.price</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Product Description</h5>
                            <span>
                                @Model.Product.description
                            </span>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12">
                            <p class="tag-section"><strong>Country Origin : </strong><a href=""><img width="15px" height="15px" class="img-fluid img-responsive rounded product-image" src="@Model.Product.OriginFlagUrl"></a></p>
                        </div>
                        <div class="col-lg-12">
                            <h6>Quantity:</h6>
                         <input asp-for="Count" />
                        </div>

                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                                </div>
                                <div class="col-lg-6">
                                    <a href="#" class="btn btn-success w-100">Buy Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form>
        <div>

            <a class="btn btn-info " asp-action="Pharmacy">Back to Shop</a>
        </div>
