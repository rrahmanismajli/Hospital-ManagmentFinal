@model IEnumerable<Hospital_Managment.Models.UserFeedback>
@using Microsoft.AspNetCore.Identity;
@using Hospital_Managment.Utilities;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "FeedBacks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>&nbsp;</h1>


   
  

    <section>
    <div class="row d-flex justify-content-center">
        <div class="col-md-10 col-xl-8 text-center">
            <h3 class="mb-4">All Feedbacks</h3>
            <p class="mb-4 pb-2 mb-md-5 pb-md-0">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, error amet
                numquam iure provident voluptate esse quasi, veritatis totam voluptas nostrum
                quisquam eum porro a pariatur veniam.
            </p>
        </div>
    </div>

  
        @{
            var user = UserManager.GetUserAsync(User);
          
        }
    <div  class="row text-center d-flex align-items-stretch">
        <br /><br /><br />
        @foreach (var item in Model)
        {
        
            <div style="margin-top:5%" class="col-md-4 mb-5 mb-md-0 d-flex align-items-stretch">
               
                <div class="card testimonial-card">
                
                <div class="card-up" style="background-color: #9d789b;">
                       
                </div>
                   
                <div class="avatar mx-auto bg-white">
                        <img width="650px" height="80px" src="@item.ApplicationUser.ImageUrl"
                         class="rounded-circle " />
                
                     </div>
                    
                <div class="card-body">
                        <h4 class="mb-4">@item.ApplicationUser.Name</h4>
                    <hr />
                    <p class="dark-grey-text mt-4">
                            <i class="fas fa-quote-left pe-2"></i>@item.Message
                    </p>
                </div>
                </div> 
            @if(SignInManager.IsSignedIn(User)){
                @if (item.UserId == user.Result.Id)
                {
                    <a class=""><i class="fas fa-edit"></i></a>
                }
            }
        </div>
          
        }
       
        </div>
   
    </section>




