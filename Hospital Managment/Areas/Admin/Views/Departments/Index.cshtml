            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
            <style>
                body, h1, h2, h3, h4, h5, h6 {
                    font-family: "Raleway", sans-serif
                }

                * {
                    margin: 0;
                }

        .head {
            background-color: rgb(203, 203, 242);
        }
                body, html {
                    height: 100%;
                    line-height: 1.8;
                }



                .w3-bar .w3-button {
                    padding: 16px;
                }
            </style>
        </head>
        <body>


            <!-- Team Section -->
           
            <div class="w3-container" id="team">
        <div class="head">
                <h3 class="w3-center">Doctors</h3>
                <p class="w3-center w3-large">Medical staff composed of local and foreign experts conducts every patient treatment and intervention with high professionalism and responsibility. Staff members continuously work to improve the quality of our care. It is the quality of our staff and the technology of the high standards that ultimately makes the difference in our care.</p>
               </div>
                <div class="w3-row-padding w3-grayscale" style="margin-top:64px">
                        @foreach (var item in Model)
                        {
                      <div class="w3-col l3 m6 w3-margin-bottom">
                        <div class="w3-card">
                      <h1>  @Html.DisplayFor(modelItem => item.Name)</h1>
                        <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="Jane" style="width:100%">
                            <div class="w3-container">
                           
                            <p class="w3-opacity">  @Html.DisplayFor(modelItem => item.PhoneNumber)</p>
                            <p>  @Html.DisplayFor(modelItem => item.Email)</p>
                            <p><button class="w3-button w3-light-grey w3-block">  <a asp-action="Edit" asp-route-id="@item.DepartmentId">Edit</a>  </button></p>
                            <p><button class="w3-button w3-light-grey w3-block">  <a asp-action="Details" asp-route-id="@item.DepartmentId">Details</a>  </button></p>
                            <p><button class="w3-button w3-light-grey w3-block">     <a asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a></button></p>
                            </div>
                        </div>
                    </div>
            }
                </div>
            </div>

        </body>
